@model IEnumerable<Models.Order>
@{
    ViewData["Title"] = "My Orders";
}
<div class="container py-5">
    <h2>My Orders</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Payment</th>
                <th>Transaction ID</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@order.Status</td>
                    <td>@order.PaymentMethod</td>
                    <td>@order.TransactionId</td>
                    <td>৳@order.Items.Sum(i => i.Price * i.Quantity)</td>
                    <td>
                        @if (order.Status == "Pending")
                        {
                            <form method="post" action="/User/CancelOrder" class="d-inline">
                                <input type="hidden" name="id" value="@order.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                            </form>
                        }
                        else if (order.Status == "Cancelled")
                        {
                            <span class="text-danger">Cancelled</span>
                        }
                        else
                        {
                            <span class="text-muted">Cannot cancel</span>
                        }
                    </td>
                </tr>
                <tr class="collapse" id="orderItemsUser@order.Id">
                    <td colspan="8">
                        <ul class="list-group">
                            @foreach (var item in order.Items)
                            {
                                <li class="list-group-item">
                                    <strong>@item.ProductName</strong> x @item.Quantity (৳@item.Price each)
                                </li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No orders found.</div>
}
