@model IEnumerable<Models.Order>
@{
    ViewData["Title"] = "My Orders";
}
<div class="container py-5">
    <h2>My Orders</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Payment</th>
                <th>Transaction ID</th>
                <th>Total</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@order.Status</td>
                    <td>@order.PaymentMethod</td>
                    <td>@order.TransactionId</td>
                    <td>৳@order.Items.Sum(i => i.Price * i.Quantity)</td>
                    <td>
                        <button class="btn btn-sm btn-info" type="button" data-bs-toggle="collapse"
                            data-bs-target="#orderItems@order.Id">View</button>
                    </td>
                </tr>
                <tr class="collapse" id="orderItems@order.Id">
                    <td colspan="7">
                        <ul class="list-group">
                            @foreach (var item in order.Items)
                            {
                                <li class="list-group-item">
                                    <strong>@item.ProductName</strong> x @item.Quantity (৳@item.Price each)
                                </li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (!Model.Any())
{
    <div class="alert alert-info">No orders found.</div>
}
